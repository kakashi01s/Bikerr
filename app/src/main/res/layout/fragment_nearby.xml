<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.NearbyFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:fontFamily="@font/hemihead"
            android:text="Nearby"
            android:gravity="center"
            android:textSize="30dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />
    </LinearLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_fuel"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="@color/light_gray"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:clickable="true"

                    android:elevation="50dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FUEL"
                        android:layout_gravity="center"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_garage"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="@color/light_gray"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="50dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GARAGE"
                        android:layout_gravity="center"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_atm"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="@color/light_gray"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="50dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ATM"
                        android:layout_gravity="center"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        />
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_food"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="@color/light_gray"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="50dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FOOD"
                        android:layout_gravity="center"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_medicine"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="@color/light_gray"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="50dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MEDICINE"
                        android:layout_gravity="center"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_rentals"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="@color/light_gray"
                    android:layout_gravity="center"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:elevation="50dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RENTALS"
                        android:layout_gravity="center"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </HorizontalScrollView>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#FDFDFD"
            android:padding="10dp">

            <ImageView
                android:id="@+id/Nearby_Img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/fuel"/>

            <TextView
                android:id="@+id/Nearby_Text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:fontFamily="@font/hemihead"
                android:text="Fuel "
                android:padding="5dp"
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.google.android.gms.ads.AdView
                    xmlns:ads="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/nearbyBanneradView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    ads:adSize="BANNER"
                    ads:adUnitId="ca-app-pub-5409396306285350/7507174212">
                </com.google.android.gms.ads.AdView>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_fuel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


    </LinearLayout>




</LinearLayout>


