<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AboutActivities.AboutActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/headingabout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/hemihead"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/bodyabout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp" />
    </ScrollView>
    <androidx.cardview.widget.CardView
        android:id="@+id/instagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="450dp"
        android:elevation="30dp"
        app:cardCornerRadius="100dp"
        android:clickable="true"

        >
        <ImageView
            android:padding="20dp"

            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/insta"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/emaill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="300dp"
        android:elevation="30dp"
        app:cardCornerRadius="100dp"
        android:clickable="true"
        >
        <ImageView
            android:padding="10dp"

            android:src="@drawable/bikerr_png"
            android:layout_width="100dp"
            android:layout_height="100dp" />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/whatsapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:elevation="30dp"
        app:cardCornerRadius="100dp"
        android:clickable="true"
        >
        <ImageView
            android:padding="20dp"
            android:src="@drawable/whatsapp"
            android:layout_width="100dp"
            android:layout_height="100dp" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/whatsapptext"
        android:text="+917427008094"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="130dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="170dp"/>
    <TextView
        android:id="@+id/emailtext"
        android:text="fireflybikerr@gmail.com"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="130dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="320dp"/>
    <TextView
        android:id="@+id/instagramtext"
        android:text="bikerrApp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="130dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="470dp"/>
</RelativeLayout>